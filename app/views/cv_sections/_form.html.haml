= form_for @cv_section do |f|
  - if @cv_section.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cv_section.errors.count, "error")} prohibited this cv_section from being saved:"
      %ul
        - @cv_section.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
